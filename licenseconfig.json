{
    "ignoreFile": ".gitignore",
    "ignore": [
        ".*",
        "**/*.config.*",
        "**/.gitignore",
        "**/bin/*",
        ".yarn/",
        ".github/",
        "**/*.md",
        "*.lock",
        "*.html",
        "**/.eslintignore"
    ],
    "license": "./assets/license_header.txt",
    "licenseFormats": {
        "js|ts": {
            "eachLine": {
                "prepend": "// "
            }
        },
        "dotfile|^Dockerfile": {
            "eachLine": {
                "prepend": "# "
            }
        }
    },
    "trailingWhitespace": "TRIM"
}