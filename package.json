{
  "name": "nitric-cli",
  "version": "0.0.0",
  "description": "CLI monorepo for the Nitric framework",
  "author": "Nitric <https://github.com/nitric-dev>",
  "scripts": {
    "build:common": "yarn workspace @nitric/cli-common build"
  },
  "contributors": [
    "Jye Cusch <jye.cusch@gmail.com>",
    "Tim Holm <timothy.j.holm@gmail.com>"
  ],
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.2.5",
    "jest": "^26.6.1",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "typescript": "^3.3"
  },
  "workspaces": [
    "packages/base",
    "packages/common",
    "packages/plugins/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{ts,js,css,md}": "prettier --write",
    "./**/*.{ts,js}": "eslint --fix-dry-run"
  }
}
